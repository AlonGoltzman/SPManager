<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spmgrTest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:entries="@array/values"
        android:padding="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/spmgrTest_value_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spmgrTest_name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/spmgrTest_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/value"
            android:padding="20dp"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/spmgrTest_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spmgrTest_value_layout"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="@string/submit"/>
</RelativeLayout>
